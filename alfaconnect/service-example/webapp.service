[Unit]
Description=Next.js WebApp
After=network.target

[Service]
Type=simple
User=vboxuser
WorkingDirectory=/home/vboxuser/Desktop/webapp
EnvironmentFile=/home/vboxuser/Desktop/alfaconnect/.env
EnvironmentFile=/home/vboxuser/Desktop/alfaconnect/.env.production
Environment="PATH=/home/vboxuser/.nvm/versions/node/v22.21.1/bin:/usr/bin:/bin"
ExecStart=/home/vboxuser/.nvm/versions/node/v22.21.1/bin/npm run start
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

